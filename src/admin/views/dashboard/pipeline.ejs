<% locals.activeTab = 'pipeline' %>

<!-- Pipeline Status Cards -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card text-center">
            <div class="card-body">
                <i class="bi bi-clock text-warning" style="font-size: 2rem;"></i>
                <h3 class="mt-2 text-warning"><%= stats.pending %></h3>
                <p class="text-muted mb-0">Pending Jobs</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card text-center">
            <div class="card-body">
                <i class="bi bi-gear text-info" style="font-size: 2rem;"></i>
                <h3 class="mt-2 text-info"><%= stats.running %></h3>
                <p class="text-muted mb-0">Running</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card text-center">
            <div class="card-body">
                <i class="bi bi-check-circle text-success" style="font-size: 2rem;"></i>
                <h3 class="mt-2 text-success"><%= stats.completed %></h3>
                <p class="text-muted mb-0">Completed</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card text-center">
            <div class="card-body">
                <i class="bi bi-x-circle text-danger" style="font-size: 2rem;"></i>
                <h3 class="mt-2 text-danger"><%= stats.failed %></h3>
                <p class="text-muted mb-0">Failed</p>
            </div>
        </div>
    </div>
</div>

<!-- Active Jobs -->
<% if (runningJobs.length > 0) { %>
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Currently Running Jobs</h5>
            </div>
            <div class="card-body">
                <% runningJobs.forEach(function(job) { %>
                    <div class="alert alert-info d-flex justify-content-between align-items-center">
                        <div>
                            <div class="fw-bold">
                                <span class="spinner-border spinner-border-sm me-2"></span>
                                <%= job.topic %>
                            </div>
                            <small class="text-muted">Status: <%= job.status.replace('_', ' ') %></small>
                        </div>
                        <div class="text-end">
                            <small class="text-muted">
                                Started: <%= new Date(job.created_at || '').toLocaleString() %>
                            </small>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>
<% } %>

<!-- Recent Jobs -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recent Video Jobs</h5>
                <button class="btn btn-sm btn-outline-secondary" onclick="window.location.reload()">
                    <i class="bi bi-arrow-clockwise"></i> Refresh
                </button>
            </div>
            <div class="card-body">
                <% const allJobs = [...pendingJobs, ...runningJobs, ...completedJobs.slice(0, 10), ...failedJobs.slice(0, 5)]; %>
                <% if (allJobs.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Status</th>
                                    <th>Topic</th>
                                    <th>Progress</th>
                                    <th>Duration</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% allJobs.forEach(function(job) { %>
                                    <tr class="<%= 
                                        job.status === 'failed' ? 'table-danger' : 
                                        job.status === 'completed' ? 'table-success' : 
                                        job.status === 'pending' ? 'table-warning' : 'table-info' 
                                    %>">
                                        <td>
                                            <span class="status-indicator <%= 
                                                job.status === 'completed' ? 'status-success' : 
                                                job.status === 'failed' ? 'status-danger' : 
                                                job.status === 'pending' ? 'status-warning' : 'status-info' 
                                            %>"></span>
                                            <%= job.status.replace('_', ' ') %>
                                        </td>
                                        <td>
                                            <div class="fw-bold"><%= job.topic %></div>
                                            <% if (job.error_message) { %>
                                                <small class="text-danger">Error: <%= job.error_message %></small>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% 
                                            let progress = 0;
                                            if (job.status === 'completed') progress = 100;
                                            else if (job.status === 'video_synthesis') progress = 75;
                                            else if (job.status === 'narration') progress = 50;
                                            else if (job.status === 'script_generation') progress = 25;
                                            else if (job.status === 'pending') progress = 0;
                                            %>
                                            <div class="progress" style="width: 100px;">
                                                <div class="progress-bar <%= 
                                                    job.status === 'failed' ? 'bg-danger' : 
                                                    job.status === 'completed' ? 'bg-success' : 'bg-info' 
                                                %>" style="width: <%= progress %>%"></div>
                                            </div>
                                            <small class="text-muted"><%= progress %>%</small>
                                        </td>
                                        <td>
                                            <% if (job.total_duration_seconds) { %>
                                                <%= job.total_duration_seconds %>s
                                            <% } else if (job.completed_at && job.created_at) { %>
                                                <%= Math.round((new Date(job.completed_at).getTime() - new Date(job.created_at).getTime()) / 1000) %>s
                                            <% } else { %>
                                                -
                                            <% } %>
                                        </td>
                                        <td>
                                            <div><%= new Date(job.created_at || '').toLocaleDateString() %></div>
                                            <small class="text-muted"><%= new Date(job.created_at || '').toLocaleTimeString() %></small>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <button class="btn btn-outline-primary btn-sm" onclick="viewJobDetails(<%= job.id %>)">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                                <% if (job.status === 'failed') { %>
                                                    <button class="btn btn-outline-warning btn-sm" onclick="retryJob(<%= job.id %>)">
                                                        <i class="bi bi-arrow-clockwise"></i>
                                                    </button>
                                                <% } %>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="bi bi-diagram-3 text-muted" style="font-size: 4rem;"></i>
                        <h4 class="mt-3 text-muted">No Video Jobs Yet</h4>
                        <p class="text-muted">
                            Video jobs will appear after successful trend discoveries.<br>
                            Run a trend discovery to get started.
                        </p>
                        <button class="btn btn-primary" onclick="triggerTrendDiscovery()">
                            <i class="bi bi-play-circle"></i> Run Trend Discovery
                        </button>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Job Details Modal -->
<div class="modal fade" id="jobDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Job Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="jobDetailsContent">
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function viewJobDetails(jobId) {
    const modal = new bootstrap.Modal(document.getElementById('jobDetailsModal'));
    const content = document.getElementById('jobDetailsContent');
    
    // Show loading
    content.innerHTML = `
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    `;
    
    modal.show();
    
    // Fetch job details
    fetch(\`/api/pipeline/job/\${jobId}\`)
        .then(response => response.json())
        .then(job => {
            content.innerHTML = \`
                <div class="row">
                    <div class="col-md-6">
                        <h6>Basic Information</h6>
                        <table class="table table-sm">
                            <tr><td>Topic:</td><td>\${job.topic}</td></tr>
                            <tr><td>Status:</td><td>\${job.status}</td></tr>
                            <tr><td>Created:</td><td>\${new Date(job.created_at).toLocaleString()}</td></tr>
                            <tr><td>Duration:</td><td>\${job.total_duration_seconds || '-'}s</td></tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h6>Processing Times</h6>
                        <table class="table table-sm">
                            <tr><td>Script:</td><td>\${job.script_generation_time_ms ? (job.script_generation_time_ms/1000).toFixed(1) + 's' : '-'}</td></tr>
                            <tr><td>Narration:</td><td>\${job.narration_generation_time_ms ? (job.narration_generation_time_ms/1000).toFixed(1) + 's' : '-'}</td></tr>
                            <tr><td>Video:</td><td>\${job.video_generation_time_ms ? (job.video_generation_time_ms/1000).toFixed(1) + 's' : '-'}</td></tr>
                        </table>
                    </div>
                </div>
                \${job.script_text ? \`
                    <div class="mt-3">
                        <h6>Generated Script</h6>
                        <div class="bg-light p-3 rounded">
                            <pre class="mb-0">\${job.script_text}</pre>
                        </div>
                    </div>
                \` : ''}
                \${job.error_message ? \`
                    <div class="mt-3">
                        <h6>Error Details</h6>
                        <div class="alert alert-danger">
                            \${job.error_message}
                        </div>
                    </div>
                \` : ''}
            \`;
        })
        .catch(error => {
            content.innerHTML = \`
                <div class="alert alert-danger">
                    Failed to load job details: \${error.message}
                </div>
            \`;
        });
}

function retryJob(jobId) {
    if (confirm('Are you sure you want to retry this job?')) {
        fetch(\`/api/pipeline/job/\${jobId}/retry\`, { method: 'POST' })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showNotification('Job retry initiated', 'success');
                    setTimeout(() => window.location.reload(), 2000);
                } else {
                    showNotification(data.message, 'error');
                }
            })
            .catch(error => {
                showNotification('Failed to retry job', 'error');
            });
    }
}

// Auto-refresh for running jobs
document.addEventListener('DOMContentLoaded', function() {
    <% if (runningJobs.length > 0) { %>
        // Refresh every 10 seconds if there are running jobs
        setInterval(() => {
            window.location.reload();
        }, 10000);
    <% } %>
});
</script>

<%- include('../layout') %>