<%- include('../partials/header', { title }) %>
<%- include('../partials/sidebar', { title, activeTab }) %>

<!-- Enhanced Key Metrics Cards -->
<div class="row mb-5">
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card metric-card animate-slide-in success-metric">
            <div class="card-body">
                <div class="metric-content">
                    <div class="metric-header">
                        <div class="metric-icon success">
                            <i class="bi bi-lightbulb-fill"></i>
                        </div>
                        <div class="metric-info">
                            <h6 class="metric-label">Storylines Generated</h6>
                            <div class="metric-value">0</div>
                        </div>
                    </div>
                    <div class="metric-status">
                        <div class="status-pills">
                            <span class="status-pill success">
                                <i class="bi bi-check2"></i> Ready
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card metric-card animate-slide-in info-metric" style="animation-delay: 0.1s;">
            <div class="card-body">
                <div class="metric-content">
                    <div class="metric-header">
                        <div class="metric-icon info">
                            <i class="bi bi-collection-play"></i>
                        </div>
                        <div class="metric-info">
                            <h6 class="metric-label">Total Videos</h6>
                            <div class="metric-value"><%= recentJobs.length %></div>
                        </div>
                    </div>
                    <div class="metric-chart">
                        <div class="trend-sparkline">
                            <span class="spark-dot active"></span>
                            <span class="spark-dot active"></span>
                            <span class="spark-dot active"></span>
                            <span class="spark-dot"></span>
                            <span class="spark-dot active"></span>
                        </div>
                        <div class="chart-label">Recent activity</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card metric-card animate-slide-in warning-metric" style="animation-delay: 0.2s;">
            <div class="card-body">
                <div class="metric-content">
                    <div class="metric-header">
                        <div class="metric-icon warning">
                            <i class="bi bi-play-circle"></i>
                        </div>
                        <div class="metric-info">
                            <h6 class="metric-label">Video Pipeline</h6>
                            <div class="metric-value"><%= recentJobs.length %></div>
                        </div>
                    </div>
                    <div class="metric-status">
                        <div class="status-pills">
                            <span class="status-pill processing">
                                <i class="bi bi-arrow-clockwise"></i> Processing
                            </span>
                            <span class="status-pill completed">
                                <i class="bi bi-check2"></i> Ready
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card metric-card animate-slide-in primary-metric" style="animation-delay: 0.3s;">
            <div class="card-body">
                <div class="metric-content">
                    <div class="metric-header">
                        <div class="metric-icon primary">
                            <i class="bi bi-activity"></i>
                        </div>
                        <div class="metric-info">
                            <h6 class="metric-label">System Status</h6>
                            <div class="metric-value">Online</div>
                        </div>
                    </div>
                    <div class="metric-status">
                        <div class="health-indicators">
                            <div class="health-item">
                                <span class="health-dot active"></span>
                                <span class="health-label">Database</span>
                            </div>
                            <div class="health-item">
                                <span class="health-dot active"></span>
                                <span class="health-label">Services</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="row">
    <!-- Recent Storylines -->
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recent Storylines</h5>
                <a href="/admin/storyline" class="btn btn-sm btn-outline-primary">Generate New</a>
            </div>
            <div class="card-body">
                <div class="text-center text-muted py-4">
                    <i class="bi bi-lightbulb" style="font-size: 3rem;"></i>
                    <div class="mt-2">No storylines generated yet</div>
                    <button class="btn btn-primary btn-sm mt-2" onclick="window.location.href='/admin/storyline'">
                        Generate First Storyline
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Video Jobs -->
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Video Pipeline</h5>
                <a href="/admin/pipeline" class="btn btn-sm btn-outline-primary">View Pipeline</a>
            </div>
            <div class="card-body">
                <% if (recentJobs.length > 0) { %>
                    <% recentJobs.forEach(function(job) { %>
                        <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                            <div>
                                <div class="fw-bold">
                                    <span class="status-indicator <%= 
                                        job.status === 'completed' ? 'status-success' : 
                                        job.status === 'failed' ? 'status-danger' : 
                                        job.status === 'pending' ? 'status-warning' : 'status-info' 
                                    %>"></span>
                                    <%= job.topic %>
                                </div>
                                <small class="text-muted">
                                    Status: <%= job.status.replace('_', ' ') %>
                                    <% if (job.total_duration_seconds) { %>
                                        â€¢ <%= job.total_duration_seconds %>s
                                    <% } %>
                                </small>
                            </div>
                            <div class="text-end">
                                <small class="text-muted">
                                    <%= new Date(job.created_at || '').toLocaleString() %>
                                </small>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-play-circle" style="font-size: 3rem;"></i>
                        <div class="mt-2">No video jobs yet</div>
                        <small>Jobs will appear after trend discovery</small>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-12 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="d-grid">
                            <button class="btn btn-primary btn-lg" onclick="window.location.href='/admin/storyline'">
                                <i class="bi bi-lightbulb"></i> Generate Storylines
                            </button>
                        </div>
                        <small class="text-muted mt-2 d-block">Create new video storyline ideas</small>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="d-grid">
                            <button class="btn btn-outline-info btn-lg" onclick="window.location.href='/admin/pipeline'">
                                <i class="bi bi-diagram-3"></i> View Pipeline
                            </button>
                        </div>
                        <small class="text-muted mt-2 d-block">Monitor video production status</small>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="d-grid">
                            <button class="btn btn-outline-secondary btn-lg" onclick="refreshData()">
                                <i class="bi bi-arrow-clockwise"></i> Refresh
                            </button>
                        </div>
                        <small class="text-muted mt-2 d-block">Reload dashboard data</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
function testConnections() {
    showNotification('Testing connections...', 'info');
    
    fetch('/api/test/database', { method: 'POST' })
        .then(r => r.json())
        .then(result => {
            const message = `Database Connection: ${result.success ? 'OK' : 'FAILED'}`;
            showNotification(message, result.success ? 'success' : 'error');
    }).catch(error => {
        showNotification('Connection test failed', 'error');
    });
}
</script>
<%- include('../partials/footer') %>

