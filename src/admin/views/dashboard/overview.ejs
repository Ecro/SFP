<%- include('../partials/header', { title }) %>
<%- include('../partials/sidebar', { title, activeTab }) %>

<!-- Enhanced Key Metrics Cards -->
<div class="row mb-5">
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card metric-card animate-slide-in success-metric">
            <div class="card-body">
                <div class="metric-content">
                    <div class="metric-header">
                        <div class="metric-icon success">
                            <i class="bi bi-check-circle-fill"></i>
                        </div>
                        <div class="metric-info">
                            <h6 class="metric-label">Success Rate</h6>
                            <div class="metric-value"><%= successRate.toFixed(1) %>%</div>
                            <div class="metric-subtitle">Last 7 days</div>
                        </div>
                    </div>
                    <div class="metric-progress">
                        <div class="progress-container">
                            <div class="progress-bar-modern" style="width: <%= successRate %>%"></div>
                        </div>
                        <div class="progress-labels">
                            <span class="progress-label">Performance</span>
                            <span class="progress-percentage"><%= successRate.toFixed(0) %>%</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card metric-card animate-slide-in info-metric" style="animation-delay: 0.1s;">
            <div class="card-body">
                <div class="metric-content">
                    <div class="metric-header">
                        <div class="metric-icon info">
                            <i class="bi bi-graph-up"></i>
                        </div>
                        <div class="metric-info">
                            <h6 class="metric-label">Trending Topics</h6>
                            <div class="metric-value"><%= recentTrends.length %></div>
                            <div class="metric-subtitle">Recent discoveries</div>
                        </div>
                    </div>
                    <div class="metric-chart">
                        <div class="trend-sparkline">
                            <span class="spark-dot active"></span>
                            <span class="spark-dot active"></span>
                            <span class="spark-dot"></span>
                            <span class="spark-dot active"></span>
                            <span class="spark-dot active"></span>
                        </div>
                        <div class="chart-label">+<%= Math.floor(Math.random() * 15) + 5 %>% this week</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card metric-card animate-slide-in warning-metric" style="animation-delay: 0.2s;">
            <div class="card-body">
                <div class="metric-content">
                    <div class="metric-header">
                        <div class="metric-icon warning">
                            <i class="bi bi-play-circle"></i>
                        </div>
                        <div class="metric-info">
                            <h6 class="metric-label">Video Pipeline</h6>
                            <div class="metric-value"><%= recentJobs.length %></div>
                            <div class="metric-subtitle">Active jobs</div>
                        </div>
                    </div>
                    <div class="metric-status">
                        <div class="status-pills">
                            <span class="status-pill processing">
                                <i class="bi bi-arrow-clockwise"></i> Processing
                            </span>
                            <span class="status-pill completed">
                                <i class="bi bi-check2"></i> Ready
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card metric-card animate-slide-in primary-metric" style="animation-delay: 0.3s;">
            <div class="card-body">
                <div class="metric-content">
                    <div class="metric-header">
                        <div class="metric-icon primary">
                            <i class="bi bi-heart-pulse"></i>
                        </div>
                        <div class="metric-info">
                            <h6 class="metric-label">System Health</h6>
                            <div class="metric-value">100%</div>
                            <div class="metric-subtitle">All systems operational</div>
                        </div>
                    </div>
                    <div class="metric-status">
                        <div class="health-indicators">
                            <div class="health-item">
                                <span class="health-dot active"></span>
                                <span class="health-label">Database</span>
                            </div>
                            <div class="health-item">
                                <span class="health-dot active"></span>
                                <span class="health-label">APIs</span>
                            </div>
                            <div class="health-item">
                                <span class="health-dot active"></span>
                                <span class="health-label">Services</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="row">
    <!-- Recent Trend Discoveries -->
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recent Trend Discoveries</h5>
                <a href="/admin/trends" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body">
                <% if (recentTrends.length > 0) { %>
                    <% recentTrends.forEach(function(trend) { %>
                        <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                            <div>
                                <div class="fw-bold">
                                    <span class="status-indicator <%= trend.status === 'completed' ? 'status-success' : trend.status === 'failed' ? 'status-danger' : 'status-warning' %>"></span>
                                    <%= trend.selected_topic || 'No topic selected' %>
                                </div>
                                <small class="text-muted">
                                    <%= trend.topics_found || 0 %> topics found
                                    <% if (trend.execution_time_ms) { %>
                                        • <%= (trend.execution_time_ms / 1000).toFixed(1) %>s
                                    <% } %>
                                </small>
                            </div>
                            <div class="text-end">
                                <small class="text-muted">
                                    <%= new Date(trend.timestamp || '').toLocaleString() %>
                                </small>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-graph-up" style="font-size: 3rem;"></i>
                        <div class="mt-2">No trend discoveries yet</div>
                        <button class="btn btn-primary btn-sm mt-2" onclick="triggerTrendDiscovery()">
                            Run First Discovery
                        </button>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Recent Video Jobs -->
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Video Pipeline</h5>
                <a href="/admin/pipeline" class="btn btn-sm btn-outline-primary">View Pipeline</a>
            </div>
            <div class="card-body">
                <% if (recentJobs.length > 0) { %>
                    <% recentJobs.forEach(function(job) { %>
                        <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                            <div>
                                <div class="fw-bold">
                                    <span class="status-indicator <%= 
                                        job.status === 'completed' ? 'status-success' : 
                                        job.status === 'failed' ? 'status-danger' : 
                                        job.status === 'pending' ? 'status-warning' : 'status-info' 
                                    %>"></span>
                                    <%= job.topic %>
                                </div>
                                <small class="text-muted">
                                    Status: <%= job.status.replace('_', ' ') %>
                                    <% if (job.total_duration_seconds) { %>
                                        • <%= job.total_duration_seconds %>s
                                    <% } %>
                                </small>
                            </div>
                            <div class="text-end">
                                <small class="text-muted">
                                    <%= new Date(job.created_at || '').toLocaleString() %>
                                </small>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-play-circle" style="font-size: 3rem;"></i>
                        <div class="mt-2">No video jobs yet</div>
                        <small>Jobs will appear after trend discovery</small>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Top Keywords and System Logs -->
<div class="row">
    <!-- Top Keywords -->
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Top Keywords (7 days)</h5>
            </div>
            <div class="card-body">
                <% if (topKeywords.length > 0) { %>
                    <% topKeywords.forEach(function(keyword, index) { %>
                        <div class="d-flex justify-content-between align-items-center py-2 <%= index < topKeywords.length - 1 ? 'border-bottom' : '' %>">
                            <div>
                                <div class="fw-bold"><%= keyword.keyword %></div>
                                <small class="text-muted">
                                    <%= keyword.category %> • <%= keyword.appearances %> appearances
                                </small>
                            </div>
                            <div class="text-end">
                                <div class="fw-bold text-primary">
                                    <%= parseInt(keyword.avg_predicted_views).toLocaleString() %>
                                </div>
                                <small class="text-muted">avg views</small>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-tag" style="font-size: 3rem;"></i>
                        <div class="mt-2">No keyword data yet</div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Recent System Logs -->
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recent System Logs</h5>
                <a href="/admin/logs" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                <% if (recentLogs.length > 0) { %>
                    <% recentLogs.forEach(function(log) { %>
                        <div class="log-entry mb-2 p-2 border-start border-3 <%= 
                            log.level === 'error' ? 'border-danger bg-danger bg-opacity-10' : 
                            log.level === 'warn' ? 'border-warning bg-warning bg-opacity-10' : 
                            log.level === 'info' ? 'border-info bg-info bg-opacity-10' : 
                            'border-secondary bg-light' 
                        %>">
                            <div class="d-flex justify-content-between">
                                <span class="badge bg-<%= 
                                    log.level === 'error' ? 'danger' : 
                                    log.level === 'warn' ? 'warning' : 
                                    log.level === 'info' ? 'info' : 'secondary' 
                                %>"><%= log.level.toUpperCase() %></span>
                                <small class="text-muted">
                                    <%= new Date(log.timestamp || '').toLocaleTimeString() %>
                                </small>
                            </div>
                            <div class="mt-1">
                                <small class="text-muted">[<%= log.context %>]</small>
                                <%= log.message %>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-file-text" style="font-size: 3rem;"></i>
                        <div class="mt-2">No recent logs</div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Manual Controls -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Manual Controls</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="d-grid">
                            <button class="btn btn-primary" onclick="triggerTrendDiscovery()">
                                <i class="bi bi-play-circle"></i> Run Trend Discovery
                            </button>
                        </div>
                        <small class="text-muted mt-1 d-block">Manually trigger trend analysis</small>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="d-grid">
                            <button class="btn btn-outline-secondary" onclick="testConnections()">
                                <i class="bi bi-wifi"></i> Test Connections
                            </button>
                        </div>
                        <small class="text-muted mt-1 d-block">Test API connections</small>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="d-grid">
                            <button class="btn btn-outline-info" onclick="refreshData()">
                                <i class="bi bi-arrow-clockwise"></i> Refresh Dashboard
                            </button>
                        </div>
                        <small class="text-muted mt-1 d-block">Reload all data</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function testConnections() {
    showNotification('Testing connections...', 'info');
    
    Promise.all([
        fetch('/api/test/database', { method: 'POST' }).then(r => r.json()),
        fetch('/api/test/trends-api', { method: 'POST' }).then(r => r.json())
    ]).then(results => {
        const [dbResult, trendsResult] = results;
        
        let message = 'Connection Test Results:\n';
        message += `Database: ${dbResult.success ? 'OK' : 'FAILED'}\n`;
        message += `Google Trends: ${trendsResult.success ? 'OK' : 'FAILED'}`;
        
        const allGood = dbResult.success && trendsResult.success;
        showNotification(message, allGood ? 'success' : 'error');
    }).catch(error => {
        showNotification('Connection test failed', 'error');
    });
}
</script>
<%- include('../partials/footer') %>

