<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - SFP Admin</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <style>
        .sidebar {
            min-height: 100vh;
            background-color: #f8f9fa;
        }
        .nav-link.active {
            background-color: #0d6efd;
            color: white !important;
        }
        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: 1px solid rgba(0, 0, 0, 0.125);
        }
        .metric-card {
            transition: transform 0.2s;
        }
        .metric-card:hover {
            transform: translateY(-2px);
        }
        .chart-container {
            position: relative;
            height: 300px;
        }
        .keyword-tag {
            display: inline-block;
            background-color: #e9ecef;
            color: #495057;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.875rem;
            margin: 0.125rem;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 sidebar p-3">
                <h5 class="text-primary mb-4">SFP Admin</h5>
                <nav class="nav flex-column">
                    <a class="nav-link <%= locals.activeTab === 'dashboard' ? 'active' : '' %>" href="/admin">
                        <i class="bi bi-speedometer2 me-2"></i>Dashboard
                    </a>
                    <a class="nav-link <%= locals.activeTab === 'trends' ? 'active' : '' %>" href="/admin/trends">
                        <i class="bi bi-graph-up-arrow me-2"></i>Trends
                    </a>
                    <a class="nav-link <%= locals.activeTab === 'pipeline' ? 'active' : '' %>" href="/admin/pipeline">
                        <i class="bi bi-diagram-3 me-2"></i>Pipeline
                    </a>
                    <a class="nav-link <%= locals.activeTab === 'analytics' ? 'active' : '' %>" href="/admin/analytics">
                        <i class="bi bi-bar-chart me-2"></i>Analytics
                    </a>
                    <a class="nav-link <%= locals.activeTab === 'logs' ? 'active' : '' %>" href="/admin/logs">
                        <i class="bi bi-file-text me-2"></i>Logs
                    </a>
                    <a class="nav-link <%= locals.activeTab === 'settings' ? 'active' : '' %>" href="/admin/settings">
                        <i class="bi bi-gear me-2"></i>Settings
                    </a>
                </nav>
            </div>

            <!-- Main content -->
            <main class="col-md-10 p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2><%= title %></h2>
                    <div class="d-flex align-items-center gap-3">
                        <div class="btn-group" role="group">
                            <a href="/admin/analytics?days=7" class="btn btn-outline-primary <%= selectedDays === 7 ? 'active' : '' %>">7 Days</a>
                            <a href="/admin/analytics?days=30" class="btn btn-outline-primary <%= selectedDays === 30 ? 'active' : '' %>">30 Days</a>
                            <a href="/admin/analytics?days=90" class="btn btn-outline-primary <%= selectedDays === 90 ? 'active' : '' %>">90 Days</a>
                        </div>
                        <button class="btn btn-outline-primary btn-sm" onclick="refreshData()">
                            <i class="bi bi-arrow-clockwise me-1"></i>Refresh
                        </button>
                    </div>
                </div>

                <!-- Success Rate Overview -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card metric-card">
                            <div class="card-body text-center">
                                <i class="bi bi-graph-up text-success" style="font-size: 2.5rem;"></i>
                                <h3 class="mt-2 text-success"><%= success7d ? Math.round(success7d) : 0 %>%</h3>
                                <p class="text-muted mb-0">Success Rate (7 days)</p>
                                <% if (success30d) { %>
                                <small class="text-muted">
                                    <% const change = success7d - success30d; %>
                                    <% if (change > 0) { %>
                                    <i class="bi bi-arrow-up text-success"></i>+<%= Math.round(change) %>%
                                    <% } else if (change < 0) { %>
                                    <i class="bi bi-arrow-down text-danger"></i><%= Math.round(change) %>%
                                    <% } else { %>
                                    <i class="bi bi-dash"></i>No change
                                    <% } %>
                                    vs 30 days
                                </small>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="card metric-card">
                            <div class="card-body text-center">
                                <i class="bi bi-clock-history text-info" style="font-size: 2.5rem;"></i>
                                <h3 class="mt-2 text-info"><%= Math.round(trendStats.avgExecutionTime || 0) %>ms</h3>
                                <p class="text-muted mb-0">Avg Execution Time</p>
                                <small class="text-muted">
                                    Based on <%= trendStats.totalRuns %> trend discovery runs
                                </small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Detailed Statistics -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card metric-card text-center">
                            <div class="card-body">
                                <i class="bi bi-list-check text-primary" style="font-size: 2rem;"></i>
                                <h4 class="mt-2 text-primary"><%= trendStats.totalRuns %></h4>
                                <p class="text-muted mb-0">Total Runs</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="card metric-card text-center">
                            <div class="card-body">
                                <i class="bi bi-check-circle text-success" style="font-size: 2rem;"></i>
                                <h4 class="mt-2 text-success"><%= trendStats.successfulRuns %></h4>
                                <p class="text-muted mb-0">Successful</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="card metric-card text-center">
                            <div class="card-body">
                                <i class="bi bi-x-circle text-danger" style="font-size: 2rem;"></i>
                                <h4 class="mt-2 text-danger"><%= trendStats.failedRuns %></h4>
                                <p class="text-muted mb-0">Failed</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="card metric-card text-center">
                            <div class="card-body">
                                <i class="bi bi-percent text-warning" style="font-size: 2rem;"></i>
                                <h4 class="mt-2 text-warning">
                                    <%= trendStats.totalRuns > 0 ? Math.round((trendStats.successfulRuns / trendStats.totalRuns) * 100) : 0 %>%
                                </h4>
                                <p class="text-muted mb-0">Success Rate</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Charts Section -->
                <div class="row mb-4">
                    <!-- Success Rate Trend Chart -->
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="bi bi-graph-up me-2"></i>Success Rate Trend
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="chart-container">
                                    <canvas id="successTrendChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Execution Time Distribution -->
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="bi bi-pie-chart me-2"></i>Run Status
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="chart-container">
                                    <canvas id="statusChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Top Keywords -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="bi bi-tags me-2"></i>Top Trending Keywords (Last 30 Days)
                                </h5>
                            </div>
                            <div class="card-body">
                                <% if (topKeywords30d && topKeywords30d.length > 0) { %>
                                <div class="row">
                                    <% topKeywords30d.forEach((keyword, index) => { %>
                                    <div class="col-md-6 mb-3">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <span class="badge bg-primary me-2"><%= index + 1 %></span>
                                                <strong><%= keyword.keyword %></strong>
                                            </div>
                                            <div class="text-end">
                                                <div class="text-muted small">
                                                    <%= keyword.count %> occurrences
                                                </div>
                                                <div class="text-muted small">
                                                    Avg Score: <%= Math.round(keyword.avg_score || 0) %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>
                                </div>
                                <% } else { %>
                                <div class="text-center py-5">
                                    <i class="bi bi-search text-muted" style="font-size: 3rem;"></i>
                                    <p class="text-muted mt-2 mb-0">No trending keywords found in the selected period</p>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- System Health Indicators -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="bi bi-heart-pulse me-2"></i>System Health
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row text-center">
                                    <div class="col-4">
                                        <div class="p-3">
                                            <i class="bi bi-database text-success" style="font-size: 1.5rem;"></i>
                                            <div class="mt-2">
                                                <strong class="text-success">Online</strong>
                                                <div class="text-muted small">Database</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="p-3">
                                            <i class="bi bi-graph-up-arrow text-success" style="font-size: 1.5rem;"></i>
                                            <div class="mt-2">
                                                <strong class="text-success">Active</strong>
                                                <div class="text-muted small">Trend Collector</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="p-3">
                                            <i class="bi bi-cloud text-success" style="font-size: 1.5rem;"></i>
                                            <div class="mt-2">
                                                <strong class="text-success">Connected</strong>
                                                <div class="text-muted small">APIs</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="bi bi-info-circle me-2"></i>Quick Actions
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="d-grid gap-2">
                                    <button class="btn btn-outline-primary" onclick="triggerTrendDiscovery()">
                                        <i class="bi bi-play me-2"></i>Run Trend Discovery
                                    </button>
                                    <button class="btn btn-outline-info" onclick="exportAnalytics()">
                                        <i class="bi bi-download me-2"></i>Export Analytics Data
                                    </button>
                                    <a href="/admin/logs" class="btn btn-outline-secondary">
                                        <i class="bi bi-file-text me-2"></i>View System Logs
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Initialize charts when page loads
        document.addEventListener('DOMContentLoaded', function() {
            initializeCharts();
        });

        function initializeCharts() {
            // Success Rate Trend Chart
            const trendCtx = document.getElementById('successTrendChart').getContext('2d');
            new Chart(trendCtx, {
                type: 'line',
                data: {
                    labels: ['Day 1', 'Day 2', 'Day 3', 'Day 4', 'Day 5', 'Day 6', 'Day 7'],
                    datasets: [{
                        label: 'Success Rate %',
                        data: [85, 92, 88, 95, 90, 93, <%= success7d || 0 %>],
                        borderColor: 'rgb(75, 192, 192)',
                        backgroundColor: 'rgba(75, 192, 192, 0.1)',
                        tension: 0.1,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            ticks: {
                                callback: function(value) {
                                    return value + '%';
                                }
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });

            // Status Distribution Chart
            const statusCtx = document.getElementById('statusChart').getContext('2d');
            new Chart(statusCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Successful', 'Failed'],
                    datasets: [{
                        data: [<%= trendStats.successfulRuns %>, <%= trendStats.failedRuns %>],
                        backgroundColor: [
                            'rgba(40, 167, 69, 0.8)',
                            'rgba(220, 53, 69, 0.8)'
                        ],
                        borderColor: [
                            'rgba(40, 167, 69, 1)',
                            'rgba(220, 53, 69, 1)'
                        ],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
        }

        function refreshData() {
            window.location.reload();
        }

        function triggerTrendDiscovery() {
            if (confirm('This will start a new trend discovery process. Continue?')) {
                fetch('/api/trigger/trends', {
                    method: 'POST'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Trend discovery started successfully!');
                        setTimeout(() => window.location.reload(), 2000);
                    } else {
                        alert('Failed to start trend discovery: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error triggering trend discovery');
                });
            }
        }

        function exportAnalytics() {
            const data = {
                successRate7d: <%= success7d || 0 %>,
                successRate30d: <%= success30d || 0 %>,
                trendStats: {
                    totalRuns: <%= trendStats.totalRuns %>,
                    successfulRuns: <%= trendStats.successfulRuns %>,
                    failedRuns: <%= trendStats.failedRuns %>,
                    avgExecutionTime: <%= trendStats.avgExecutionTime || 0 %>
                },
                exportDate: new Date().toISOString()
            };
            
            const blob = new Blob([JSON.stringify(data, null, 2)], {type: 'application/json'});
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `sfp-analytics-${new Date().toISOString().split('T')[0]}.json`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }
    </script>
</body>
</html>