<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - SFP Admin</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    
    <style>
        .sidebar {
            min-height: 100vh;
            background-color: #2c3e50;
        }
        .sidebar .nav-link {
            color: #ecf0f1;
        }
        .sidebar .nav-link:hover {
            color: #3498db;
            background-color: #34495e;
        }
        .sidebar .nav-link.active {
            color: #ffffff;
            background-color: #3498db;
        }
        .status-indicator {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            display: inline-block;
            margin-right: 8px;
        }
        .status-success { background-color: #27ae60; }
        .status-warning { background-color: #f39c12; }
        .status-danger { background-color: #e74c3c; }
        .status-info { background-color: #3498db; }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar collapse">
                <div class="position-sticky pt-3">
                    <div class="text-center mb-4">
                        <h4 class="text-white">SFP Admin</h4>
                        <small class="text-muted">Short-Form Publisher</small>
                    </div>
                    
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/admin">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/admin/trends">
                                <i class="bi bi-graph-up"></i> Trend Analysis
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/pipeline">
                                <i class="bi bi-diagram-3"></i> Video Pipeline
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/analytics">
                                <i class="bi bi-bar-chart"></i> Analytics
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/logs">
                                <i class="bi bi-file-text"></i> System Logs
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/settings">
                                <i class="bi bi-gear"></i> Settings
                            </a>
                        </li>
                    </ul>
                    
                    <hr class="my-3">
                    
                    <!-- Quick Actions -->
                    <div class="px-3">
                        <h6 class="text-white-50 mb-2">Quick Actions</h6>
                        <button class="btn btn-sm btn-outline-light mb-2 w-100" onclick="triggerTrendDiscovery()">
                            <i class="bi bi-play-circle"></i> Run Trends
                        </button>
                        <button class="btn btn-sm btn-outline-light mb-2 w-100" onclick="refreshData()">
                            <i class="bi bi-arrow-clockwise"></i> Refresh
                        </button>
                    </div>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2"><%= title %></h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <div class="btn-group me-2">
                            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="window.location.reload()">
                                <i class="bi bi-arrow-clockwise"></i> Refresh
                            </button>
                        </div>
                        <div class="text-muted small">
                            Last updated: <span id="lastUpdated"><%= new Date().toLocaleString() %></span>
                        </div>
                    </div>
                </div>

<!-- Trends Overview -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Trend Discovery History</h5>
                <div>
                    <button class="btn btn-success btn-sm" onclick="triggerTrendDiscovery()">
                        <i class="bi bi-play-circle"></i> Run Discovery
                    </button>
                    <button class="btn btn-outline-secondary btn-sm" onclick="window.location.reload()">
                        <i class="bi bi-arrow-clockwise"></i> Refresh
                    </button>
                </div>
            </div>
            <div class="card-body">
                <% if (trends.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Status</th>
                                    <th>Selected Topic</th>
                                    <th>Topics Found</th>
                                    <th>Execution Time</th>
                                    <th>Timestamp</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% trends.forEach(function(trend) { %>
                                    <tr class="<%= trend.status === 'failed' ? 'table-danger' : trend.status === 'completed' ? 'table-success' : 'table-warning' %>">
                                        <td>
                                            <span class="status-indicator <%= 
                                                trend.status === 'completed' ? 'status-success' : 
                                                trend.status === 'failed' ? 'status-danger' : 'status-warning' 
                                            %>"></span>
                                            <%= trend.status %>
                                        </td>
                                        <td>
                                            <div class="fw-bold"><%= trend.selected_topic || 'None' %></div>
                                            <% if (trend.selected_topic_score) { %>
                                                <small class="text-muted">Score: <%= trend.selected_topic_score %></small>
                                            <% } %>
                                        </td>
                                        <td><%= trend.topics_found || 0 %></td>
                                        <td>
                                            <% if (trend.execution_time_ms) { %>
                                                <%= (trend.execution_time_ms / 1000).toFixed(1) %>s
                                            <% } else { %>
                                                -
                                            <% } %>
                                        </td>
                                        <td>
                                            <div><%= new Date(trend.timestamp || '').toLocaleDateString() %></div>
                                            <small class="text-muted"><%= new Date(trend.timestamp || '').toLocaleTimeString() %></small>
                                        </td>
                                        <td>
                                            <% if (trend.id) { %>
                                                <a href="/admin/trends/<%= trend.id %>" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i> View
                                                </a>
                                            <% } %>
                                        </td>
                                    </tr>
                                    
                                    <!-- Expandable row for topics -->
                                    <% if (trend.topics && trend.topics.length > 0) { %>
                                        <tr class="collapse" id="topics-<%= trend.id %>">
                                            <td colspan="6">
                                                <div class="p-3 bg-light">
                                                    <h6>Discovered Topics:</h6>
                                                    <div class="row">
                                                        <% trend.topics.slice(0, 6).forEach(function(topic) { %>
                                                            <div class="col-md-4 mb-2">
                                                                <div class="card border">
                                                                    <div class="card-body p-2">
                                                                        <div class="fw-bold text-truncate" title="<%= topic.keyword %>">
                                                                            <%= topic.keyword %>
                                                                        </div>
                                                                        <small class="text-muted">
                                                                            <%= topic.category %> • 
                                                                            <%= parseInt(topic.predicted_views).toLocaleString() %> views
                                                                        </small>
                                                                        <div class="mt-1">
                                                                            <div class="progress" style="height: 3px;">
                                                                                <div class="progress-bar" style="width: <%= (topic.score || 0) %>%"></div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        <% }); %>
                                                    </div>
                                                    <% if (trend.topics.length > 6) { %>
                                                        <small class="text-muted">
                                                            And <%= trend.topics.length - 6 %> more topics...
                                                        </small>
                                                    <% } %>
                                                </div>
                                            </td>
                                        </tr>
                                    <% } %>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Pagination -->
                    <% if (currentPage > 1 || hasNextPage) { %>
                        <nav aria-label="Trends pagination">
                            <ul class="pagination justify-content-center">
                                <% if (currentPage > 1) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="/admin/trends?page=<%= currentPage - 1 %>">Previous</a>
                                    </li>
                                <% } %>
                                
                                <li class="page-item active">
                                    <span class="page-link">Page <%= currentPage %></span>
                                </li>
                                
                                <% if (hasNextPage) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="/admin/trends?page=<%= currentPage + 1 %>">Next</a>
                                    </li>
                                <% } %>
                            </ul>
                        </nav>
                    <% } %>
                    
                <% } else { %>
                    <!-- Empty state -->
                    <div class="text-center py-5">
                        <i class="bi bi-graph-up text-muted" style="font-size: 4rem;"></i>
                        <h4 class="mt-3 text-muted">No Trend Discoveries Yet</h4>
                        <p class="text-muted">
                            Start by running your first trend discovery to see trending topics from Google Trends.
                        </p>
                        <button class="btn btn-primary btn-lg" onclick="triggerTrendDiscovery()">
                            <i class="bi bi-play-circle"></i> Run First Discovery
                        </button>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Summary Statistics -->
<% if (trends.length > 0) { %>
    <div class="row">
        <div class="col-md-3 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-primary"><%= trends.length %></h3>
                    <p class="text-muted mb-0">Total Runs</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-success">
                        <%= trends.filter(t => t.status === 'completed').length %>
                    </h3>
                    <p class="text-muted mb-0">Successful</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-danger">
                        <%= trends.filter(t => t.status === 'failed').length %>
                    </h3>
                    <p class="text-muted mb-0">Failed</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-info">
                        <%= Math.round(trends.reduce((sum, t) => sum + (t.topics_found || 0), 0) / trends.length) %>
                    </h3>
                    <p class="text-muted mb-0">Avg Topics</p>
                </div>
            </div>
        </div>
    </div>
<% } %>

<script>
// Add click handlers for expandable rows
document.addEventListener('DOMContentLoaded', function() {
    // Make table rows clickable to show topics
    document.querySelectorAll('tbody tr:not(.collapse)').forEach(function(row) {
        if (row.dataset.bsToggle !== 'collapse') {
            row.style.cursor = 'pointer';
            row.addEventListener('click', function(e) {
                // Don't trigger if clicking on a button/link
                if (e.target.closest('a') || e.target.closest('button')) return;
                
                // Find the corresponding topics row
                const nextRow = row.nextElementSibling;
                if (nextRow && nextRow.classList.contains('collapse')) {
                    const collapse = new bootstrap.Collapse(nextRow, {
                        toggle: true
                    });
                }
            });
        }
    });
});
</script>

            </main>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        function triggerTrendDiscovery() {
            fetch('/api/trigger/trends', { method: 'POST' })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Trend discovery completed successfully!');
                        setTimeout(() => window.location.reload(), 2000);
                    } else {
                        alert('Trend discovery failed: ' + data.message);
                    }
                })
                .catch(error => {
                    alert('Failed to trigger trend discovery');
                });
        }
        
        function refreshData() {
            window.location.reload();
        }
        
        function showNotification(message, type) {
            alert(message); // Simple alert for now
        }
    </script>
</body>
</html>