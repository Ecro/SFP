                            <span>Refresh</span>
                        </button>
                    </div>
                </div>

                <!-- Connection Status -->
                <div class="nav-section">
                    <div class="connection-status">
                        <div class="status-container">
                            <span class="status-indicator live-update" id="connectionStatus"></span>
                            <div class="status-info">
                                <span class="status-label">System Status</span>
                                <span class="status-text" id="connectionText">Connected</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main Content Area -->
        <main class="col-md-9 ms-sm-auto col-lg-10">
            <!-- Top Header Bar -->
            <div class="main-header">
                <div class="header-content">
                    <div class="header-left">
                        <button class="mobile-menu-btn d-md-none" onclick="toggleSidebar()">
                            <i class="bi bi-list"></i>
                        </button>
                        <h1 class="page-title"><%= title %></h1>
                    </div>
                    <div class="header-right">
                        <div class="header-actions">
                            <button type="button" class="action-btn" onclick="window.location.reload()" title="Refresh Page">
                                <i class="bi bi-arrow-clockwise"></i>
                            </button>
                            <button type="button" class="action-btn" onclick="toggleFullscreen()" title="Toggle Fullscreen">
                                <i class="bi bi-fullscreen"></i>
                            </button>
                        </div>
                        <div class="header-meta">
                            <span class="last-updated">
                                Last updated: <span id="lastUpdated"><%= new Date().toLocaleString() %></span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>

