                        <li class="nav-item">
                            <a class="nav-link <%= activeTab === 'storyline' ? 'active' : '' %>" href="/admin/storyline">
                                <i class="bi bi-lightbulb"></i>
                                <span>Storyline</span>
                                <% if (activeTab === 'storyline') { %>
                                    <div class="nav-indicator"></div>
                                <% } %>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= activeTab === 'pipeline' ? 'active' : '' %>" href="/admin/pipeline">
                                <i class="bi bi-diagram-3"></i>
                                <span>Video Pipeline</span>
                                <% if (activeTab === 'pipeline') { %>
                                    <div class="nav-indicator"></div>
                                <% } %>
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Quick Actions Section -->
                <div class="nav-section">
                    <div class="nav-header">
                        <span class="nav-header-text">QUICK ACTIONS</span>
                    </div>
                    <div class="quick-actions">
                        <button class="quick-action-btn warning" onclick="window.location.href='/admin/storyline'">
                            <i class="bi bi-lightbulb"></i>
                            <span>Storyline</span>
                        </button>
                        <button class="quick-action-btn secondary" onclick="refreshData()">
