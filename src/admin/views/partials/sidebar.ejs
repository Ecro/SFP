<div class="container-fluid">
    <div class="row">
        <nav class="col-md-3 col-lg-2 d-md-block sidebar collapse">
            <div class="position-sticky pt-3">
                <div class="text-center mb-4">
                    <h4 class="text-white">SFP Admin</h4>
                    <small class="text-muted">Short-Form Publisher</small>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link <%= activeTab === 'overview' ? 'active' : '' %>" href="/admin">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= activeTab === 'trends' ? 'active' : '' %>" href="/admin/trends">
                            <i class="bi bi-graph-up"></i> Trend Analysis
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= activeTab === 'pipeline' ? 'active' : '' %>" href="/admin/pipeline">
                            <i class="bi bi-diagram-3"></i> Video Pipeline
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= activeTab === 'analytics' ? 'active' : '' %>" href="/admin/analytics">
                            <i class="bi bi-bar-chart"></i> Analytics
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= activeTab === 'logs' ? 'active' : '' %>" href="/admin/logs">
                            <i class="bi bi-file-text"></i> System Logs
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= activeTab === 'settings' ? 'active' : '' %>" href="/admin/settings">
                            <i class="bi bi-gear"></i> Settings
                        </a>
                    </li>
                </ul>

                <hr class="my-3">

                <div class="px-3">
                    <h6 class="text-white-50 mb-2">Quick Actions</h6>
                    <button class="btn btn-sm btn-outline-light mb-2 w-100" onclick="triggerTrendDiscovery()">
                        <i class="bi bi-play-circle"></i> Run Trends
                    </button>
                    <button class="btn btn-sm btn-outline-light mb-2 w-100" onclick="refreshData()">
                        <i class="bi bi-arrow-clockwise"></i> Refresh
                    </button>
                </div>

                <div class="px-3 mt-4">
                    <div class="d-flex align-items-center">
                        <span class="status-indicator" id="connectionStatus"></span>
                        <small class="text-white-50">Connection</small>
                    </div>
                </div>
            </div>
        </nav>
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2"><%= title %></h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="window.location.reload()">
                            <i class="bi bi-arrow-clockwise"></i> Refresh
                        </button>
                    </div>
                    <div class="text-muted small">
                        Last updated: <span id="lastUpdated"><%= new Date().toLocaleString() %></span>
                    </div>
                </div>
            </div>
