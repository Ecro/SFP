                </div>

                <!-- Main Navigation -->
                <div class="nav-section">
                    <div class="nav-header">
                        <span class="nav-header-text">MAIN MENU</span>
                    </div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link <%= activeTab === 'overview' ? 'active' : '' %>" href="/admin">
